<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tooltracker.controller.newtoolcontrollers.newOrderController"
            prefHeight="200.0" prefWidth="300.0">



    <GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">

        <Label text="Numer zlecenia" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="orderNumTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Numer detalu" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="partNumTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Ilość sztuk" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="partsQtyTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
            <Button fx:id="confirmButton" onAction="#handleConfirmButton" text="Zatwierdź" />
            <Button fx:id="cancelButton" onAction="#handleCancelButton" text="Anuluj" />
        </VBox>

    </GridPane>
</AnchorPane>
