        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2">
            <RadioButton text="R" fx:id="lDirection" toggleGroup="$directionToggleGroup" />
            <RadioButton text="L" fx:id="pDirection" toggleGroup="$directionToggleGroup" />
            <RadioButton text="N" fx:id="nDirection" toggleGroup="$directionToggleGroup" />
        </HBox>
        <Label text="Min ø" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="minDiamTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="Max ø" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="maxDiamTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="Max głębokość rowka" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="maxDepthTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Label text="Pasujące płytki" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <ComboBox fx:id="matchingInserts1CB" GridPane.columnIndex="1" GridPane.rowIndex="6">
