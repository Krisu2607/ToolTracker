<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tooltracker.controller.newtoolcontrollers.AddEmRController">

    <GridPane alignment="CENTER" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>



        <Label text="Nazwa narzędzia" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="D1" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="D1textfield" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="D2" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="D2textfield" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="L1" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="L1textfield" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="L2" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="L2textfield" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Materiał" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <ComboBox fx:id="toolMatComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="HSS" />
                    <String fx:value="VHM" />
                </FXCollections>
            </items>
        </ComboBox>
        <Label text="Ilość ostrzy" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="toothsQtyTextField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        <Label text="Cena" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <TextField fx:id="priceTextField" GridPane.columnIndex="1" GridPane.rowIndex="8" />
        <Label text="Kula?" GridPane.columnIndex="0" GridPane.rowIndex="9" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="9" GridPane.columnSpan="2">
            <RadioButton text="Tak" fx:id="ballYes" toggleGroup="$ballToggleGroup" />
            <RadioButton text="Nie" fx:id="ballNo" toggleGroup="$ballToggleGroup" />
        </HBox>
        <Label text="Materiał obrabiany" GridPane.columnIndex="0" GridPane.rowIndex="10" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="10" GridPane.columnSpan="2">
            <RadioButton text="ALU" fx:id="ALUchoice" toggleGroup="$materialToggleGroup" />
            <RadioButton text="STAL" fx:id="STALchoice" toggleGroup="$materialToggleGroup" />
        </HBox>
        <Label text="Promień" GridPane.columnIndex="0" GridPane.rowIndex="11" />
        <TextField fx:id="emRadius" GridPane.columnIndex="1" GridPane.rowIndex="11" />



        <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="12">
            <Button fx:id="confirmButton" onAction="#handleConfirmButton" text="Zatwierdź" />
            <Button fx:id="cancelButton" onAction="#handleCancelButton" text="Anuluj" />
        </VBox>
        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>
    <AnchorPane layoutX="270.0" layoutY="14.0" prefHeight="269.0" prefWidth="185.0" />
    <VBox layoutX="300" layoutY="50">
        <Label text="Dodane indeksy:"/>
        <ListView fx:id="addedIndexesListView" prefHeight="300" prefWidth="120" />
    </VBox>

</AnchorPane>
