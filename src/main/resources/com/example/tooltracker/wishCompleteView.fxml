<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.tooltracker.controller.wishCompletedController"
            prefHeight="400.0" prefWidth="600.0">

    <GridPane xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="Skąd zamówione:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="whereOrderedTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Koszt" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="costTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Producent" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="producentTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <VBox spacing="10" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2">
            <Button text="Zatwierdź" fx:id="confirmButton" onAction="#handleConfirmButton" />
            <Button text="Anuluj"  fx:id="cancelButton" onAction="#handleCancelButton"/>
        </VBox>
    </GridPane>


</AnchorPane>